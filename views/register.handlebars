
<form id="registration-form" action="/register" method="post" onsubmit="return validateRegistration()">
  <h1>Register:</h1>

  <label for="firstNameInput">First Name:</label>
  <input type="text" id="firstNameInput" name="firstName" required>

  <label for="lastNameInput">Last Name:</label>
  <input type="text" id="lastNameInput" name="lastName" required>

  <label for="usernameInput">Username:</label>
  <input type="text" id="usernameInput" name="username" required>

 {{!-- <label for="emailAddressInput">Email Address:</label>
  <input type="email" id="emailAddressInput" name="email" required>  --}}

  <label for="passwordInput">Password:</label>
  <input type="password" id="passwordInput" name="password" required>

  <label for="confirmPasswordInput">Confirm Password:</label>
  <input type="password" id="confirmPasswordInput" name="confirmPassword" required>

  <label for="genderInput">Gender:</label>
  <select id="genderInput" name="gender" required>
    <option value="">Select a Gender</option>
    <option value="male">Male</option>
    <option value="female">Female</option>
    <option value="other">Other</option>
    <option value="none">Prefer not to say</option>
  </select>

    <label for="birthdayInput">Birthday:</label>
  <input type="date" id="birthdayInput" name="birthday" required><br>

  <label for="cityInput">City:</label>
  <input type="text" id="cityInput" name="city" required>

